@model Project_1.Models.ContactForm

@{
    ViewBag.Title = "Index";
}

<style>
    .vresize {
        line-height: 1.5em;
        min-height: 4.5em;
        resize: vertical;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-2">
        </div>

        <div class="panel panel-default col-lg-6 col-md-6 col-sm-8">
            <div class="panel-heading">
                <h1>Contact Us</</h1>
            </div>
            @using (Html.BeginForm("SubmitContactForm", "Contact", FormMethod.Post))
            {
                <div class="panel-body">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.TextBoxFor(m => m.Name, new { required = "required", placeholder = "Name", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { required = "required", @type = "email", placeholder = "Email", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-question-sign"></i></span>
                            @Html.DropDownListFor(m => m.Type, new List<SelectListItem>
                               { new SelectListItem{Text="General Inquiry", Value="General Inquiry"},
                                 new SelectListItem{Text="Incident", Value="Incident" },
                                 new SelectListItem{Text="Site Enhancement", Value="Site Enhancement" },
                                 new SelectListItem{Text="Other", Value="Other" } },
                                 "Select a menu option...",
                                new { required = "required", @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i></span>
                            @Html.TextAreaFor(m => m.Text, new { required = "required", rows = "4", placeholder = "Comment", @class = "form-control vresize" })
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary pull-right">
                            Send <span class="glyphicon glyphicon-send"></span>
                        </button>
                        <button type="reset" name="reset" value="Reset" class="btn btn-secondary pull-left">
                            Clear <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-3 col-md-3 col-sm-2">
        </div>
    </div>
</div>

<script>

</script>

