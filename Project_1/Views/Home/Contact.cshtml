@{
    ViewBag.Title = "Contact Us";
}

<style>
    .vresize {
        line-height: 1.5em;
        min-height: 4.5em;
        resize: vertical;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-2">
        </div>

        <div class="panel panel-default col-lg-6 col-md-6 col-sm-8">
            <div class="panel-heading">
                <h1>Contact Us</</h1>
            </div>
            <form method="post">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" name="inputName" class="form-control" placeholder="Name" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input type="email" name="inputEmail" class="form-control" placeholder="Email" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-question-sign"></i></span>
                            <select class="form-control" required>
                                <option selected hidden disabled value="">Select a menu option...</option>
                                <option>General Inquiry</option>
                                <option>Incident</option>
                                <option>Site Enhancement</option>
                                <option>Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i></span>
                            <textarea rows="4" class="form-control vresize" type="text" placeholder="Comment" required></textarea>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary pull-right">
                            Send <span class="glyphicon glyphicon-send"></span>
                        </button>
                        <button type="reset" name="reset" value="Reset" class="btn btn-secondary pull-left">
                            Clear <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-2">
        </div>
    </div>
</div>

